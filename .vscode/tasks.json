{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-DRAYLIB_STATIC",
        "-I/usr/local/include",
        "-I${workspaceFolder}/raylib/src",
        "-I${workspaceFolder}/MCIGraph_lib",
        "-std=c++17",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.out",
        "-L/usr/local/lib",
        "-lraylib",
        "-lGL",
        "-lm",
        "-lpthread",
        "-ldl",
        "-lrt",
        "-lX11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build active file and output binary to build folder"
    }
  ]
}
